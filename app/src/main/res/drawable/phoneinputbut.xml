<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >



    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dip" />
            <gradient android:angle="-90" android:startColor="@color/MainBlue" android:endColor="@color/MainBlue"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="14dip" />
            <solid android:color="@color/SecondaryButton"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"   >
            <corners android:radius="14dip" />
            <gradient android:angle="-90" android:startColor="@color/PrimaryButton1" android:endColor="@color/MainBlue" />
        </shape>
    </item>





</selector>