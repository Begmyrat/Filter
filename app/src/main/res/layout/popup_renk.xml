<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="20dp"
    android:paddingVertical="15dp"
    android:orientation="vertical"
    android:background="@drawable/popup_info_background">

    <TextView
        android:id="@+id/t_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:text="Göz renkini seçiniz"/>

    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/r_blue"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorBlue"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_background" />

        <RelativeLayout
            android:id="@+id/r_red"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorRed"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_background" />

        <RelativeLayout
            android:id="@+id/r_green"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorGreen"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_background" />

        <RelativeLayout
            android:id="@+id/r_orange"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorOrange"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_background" />

        <RelativeLayout
            android:id="@+id/r_black"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorGray"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/black_background" />

        <RelativeLayout
            android:id="@+id/r_yellow"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="clickColorYellow"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yellow_background" />

    </org.apmem.tools.layouts.FlowLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorOrange"
        android:padding="10dp"
        android:onClick="clickRenkSec"
        android:background="@drawable/rounded_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamam"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorButtonBackBackground"
        android:padding="10dp"
        android:onClick="clickVazgec"
        android:background="@drawable/rounded_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vazgeç"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>