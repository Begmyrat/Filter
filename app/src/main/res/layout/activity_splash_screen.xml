<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activities.SplashScreen">


    <ImageView
        android:id="@+id/i_solUstDaire"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationX="-8dp"
        android:src="@drawable/daire_solust"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/i_sagUstDaire"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/resim_sagust"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/i_solUstDaire"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/i_ortaDaire"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/orta_daire"
        android:alpha="1"
        app:layout_constraintBottom_toTopOf="@+id/i_resimALt"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i_solUstDaire"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/i_orta_daire2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/orta_daire"
        android:translationX="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004" />

    <ImageView
        android:id="@+id/i_resimALt"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/resim_alt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/i_filter_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:src="@drawable/filter_logo"/>

        <ImageView
            android:id="@+id/i_fltr"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/fltr"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>