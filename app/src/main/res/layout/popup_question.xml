<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/popup_info_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/t_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/verdana"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Ilk soruyu giriniz"/>

    <EditText
        android:id="@+id/e_question"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:fontFamily="@font/verdana"
        android:textSize="14sp"
        android:gravity="center"
        android:maxLength="120"
        android:layout_below="@+id/t_title"
        android:maxLines="3"
        android:hint="Sorunuzu buraya yazınız"
        android:background="@drawable/rounded_stroked_background"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/e_answer1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/verdana"
        android:layout_below="@+id/e_question"
        android:textSize="14sp"
        android:gravity="center"
        android:maxLength="120"
        android:maxLines="3"
        android:hint="Cevap 1"
        android:background="@drawable/rounded_stroked_background"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/e_answer2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/verdana"
        android:textSize="14sp"
        android:layout_below="@+id/e_answer1"
        android:gravity="center"
        android:maxLength="120"
        android:maxLines="3"
        android:hint="Cevap 2"
        android:background="@drawable/rounded_stroked_background"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/e_answer3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/verdana"
        android:textSize="14sp"
        android:layout_below="@+id/e_answer2"
        android:gravity="center"
        android:maxLength="120"
        android:maxLines="3"
        android:hint="Cevap 3"
        android:background="@drawable/rounded_stroked_background"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/b_ekleQuestion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ekle"
        android:layout_below="@+id/e_answer3"
        android:onClick="clickInsertQuestion"
        android:textAllCaps="false"
        android:background="@color/MainBlue"
        android:textColor="@color/SecondaryButton"
        android:layout_marginTop="10dp"/>


</RelativeLayout>