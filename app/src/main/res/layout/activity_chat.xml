<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/r_main"
    android:background="@color/colorChatBackground"
    tools:context=".activities.ActivityChat">

    <RelativeLayout
        android:id="@+id/r_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/i_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:onClick="clickBack"
            android:src="@drawable/ic_left_arrow"
            android:layout_centerVertical="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/i_back"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/i_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/t_usernameFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayram B"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunitosans_extra_bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:backgroundTint="@color/colorBlack"
            android:onClick="clickMore"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:divider="@android:color/transparent"
        android:layout_below="@+id/r_top"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/r_bottom"
        android:paddingBottom="10dp"
        android:stackFromBottom="true"
        android:scrollbarSize="0dp"
        android:foregroundGravity="bottom"
        android:dividerHeight="10dp"/>

    <RelativeLayout
        android:id="@+id/r_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingHorizontal="5dp">

        <RelativeLayout
            android:id="@+id/r_bottomLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/r_send"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/colorWhite"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/i_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard"/>

            <EditText
                android:id="@+id/e_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a message"
                android:textColorHint="@color/colorChatRightBox"
                android:layout_toRightOf="@+id/i_keyboard"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/colorChatRightBox"
                android:fontFamily="@font/nunitosans_regular"
                android:backgroundTint="@android:color/transparent"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="clickSend"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_background">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sent_mail"
                    app:tint="@color/colorPalet2" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>