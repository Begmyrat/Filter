<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_stroked_background"
    android:padding="10dp"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/e_question"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:gravity="top|left"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/colorBlack"
            android:hint="Soru giriniz"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_answer1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="bottom"/>

                <RadioButton
                    android:id="@+id/rb_answer2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="bottom"/>

                <RadioButton
                    android:id="@+id/rb_answer3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="bottom"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/e_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/e_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/e_answer3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>