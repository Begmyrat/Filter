<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="20dp"
    android:paddingVertical="15dp"
    android:background="@drawable/popup_bottom_background">

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:itemSpacing="10dp"
        android:visibility="gone"
        app:lineSpacing="10dp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/t_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alex Danny"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/flowLayout"
        android:fontFamily="@font/nunitosans_extra_bold"
        android:textSize="18sp"
        android:textColor="@color/colorPurple"/>

    <TextView
        android:id="@+id/t_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arkadaşlık isteği göndermek istiyor musunuz?"
        android:fontFamily="@font/nunitosans_bold"
        android:textSize="15sp"
        android:alpha="0.6"
        android:layout_below="@+id/t_username"
        android:textColor="@color/colorPurple"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t_subtitle">

        <RelativeLayout
            android:id="@+id/r_close"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/r_connect"
            android:layout_alignTop="@+id/r_connect"
            android:onClick="clickCloseBottom"
            android:background="@drawable/close_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:src="@drawable/ic_close"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/r_close"
            android:onClick="clickIstekGonder"
            android:background="@drawable/connect_background"
            android:paddingVertical="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/t_buttonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_extra_bold"
                android:gravity="center"
                android:text="İstek Gönder"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>