<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:id="@+id/c_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/i_avatar"
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/i_avatar"
        app:layout_constraintTop_toTopOf="@+id/i_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/i_avatar"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/t_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andrey Ivanovich"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="18sp"
            android:fontFamily="@font/josefin_sans_regular"
            android:textColor="@color/textPrimaryColor"/>

        <TextView
            android:id="@+id/t_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi Ada! Whats up?"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/josefin_sans_light"
            android:textColor="@color/textPrimaryColor"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>