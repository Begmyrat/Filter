<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:background="@drawable/rounded_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/i_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_instagram"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/cardview">

        <TextView
            android:id="@+id/t_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunitosans_regular"
            android:text="bigimi"/>

        <TextView
            android:id="@+id/t_username_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunitosans_regular"
            android:text="mammedov_698"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginVertical="2dp"
            android:alpha="0.3"
            android:id="@+id/view"/>

        <TextView
            android:id="@+id/t_tarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunitosans_regular"
            android:text="23.03.2021"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r_stick"
        android:layout_width="5dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPalet1"/>

</RelativeLayout>