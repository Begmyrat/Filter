<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="20dp"
    android:paddingVertical="15dp"
    android:background="@drawable/popup_info_background">

    <TextView
        android:id="@+id/t_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ad Soyad"
        android:fontFamily="@font/nunitosans_extra_bold"
        android:textSize="18sp"
        android:textColor="@color/colorPurple"/>

    <EditText
        android:id="@+id/e_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ad Soyad giriniz"
        android:fontFamily="@font/nunitosans_bold"
        android:textSize="16sp"
        android:textColor="@color/colorPurple"
        android:alpha="0.8"
        android:background="@drawable/back_background"
        android:layout_below="@+id/t_title"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/e_info">

        <RelativeLayout
            android:id="@+id/r_close"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/r_connect"
            android:layout_alignTop="@+id/r_connect"
            android:onClick="clickClose"
            android:background="@drawable/close_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:src="@drawable/ic_close"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/r_close"
            android:onClick="clickInsertInfo"
            android:background="@drawable/connect_background"
            android:paddingVertical="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ekle"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nunitosans_extra_bold"
                android:textSize="16sp"/>


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>